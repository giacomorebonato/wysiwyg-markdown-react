{
  "name": "wysiwyg-markdown-react",
  "type": "module",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "require": "./dist/wysiwyg-markdown-react.cjs",
      "default": "./dist/wysiwyg-markdown-react.modern.js"
    },
    "./dist/wysiwyg-markdown-react.css": {
      "import": "./dist/wysiwyg-markdown-react.css",
      "require": "./dist/wysiwyg-markdown-react.css"
    }
  },
  "main": "./dist/wysiwyg-markdown-react.cjs",
  "module": "./dist/wysiwyg-markdown-react.module.js",
  "unpkg": "./dist/wysiwyg-markdown-react.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
		"build:js": "microbundle --define process.env.NODE_ENV=production --sourcemap false --jsx React.createElement --output dist --tsconfig ./tsconfig.json",
		"build:css": "tailwindcss -i src/markdown-editor/remirror.css -o ./dist/wysiwyg-markdown-react.css",
    "build": "pnpm build:css && pnpm build:js",
    "release": "release-it"
  },
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "microbundle": "^0.15.1",
    "react-dom": "^18.2.0",
    "release-it": "^15.6.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@remirror/extension-markdown": "^2.0.11",
    "@remirror/pm": "^2.0.3",
    "@remirror/react": "^2.0.25",
    "@remirror/react-editors": "^1.0.25",
    "@remirror/styles": "^2.0.3",
    "refractor": "^4.8.0",
    "remirror": "^2.0.24",
    "tailwindcss": "^3.2.7"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "version": "0.0.1"
}
